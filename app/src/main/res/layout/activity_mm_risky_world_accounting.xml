<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MM_RiskyWorldAccounting">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="341dp"
        android:layout_height="154dp"
        android:layout_marginTop="16dp"
        android:text="Risky World is an accountability prototype system architecture designed to implement basic security to several roles for users, implement basic parameters and functionalities in the applications, building registration, wholesale in accounting items and a clean and integral financial status for the company."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="340dp"
        android:layout_height="98dp"
        android:layout_marginTop="4dp"
        android:text=" This app is fully dynamic, where administrators can add, delete or change information constantly by accessing their accounts, modifying records and assigning tasks to several other administrators and users."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="343dp"
        android:layout_height="118dp"
        android:layout_marginTop="16dp"
        android:text="The Risky World App is an Accounting Website idea, designed by my father and developed by me, is a accounting database system keeping track of general information, parameters, catalogs, and users from different departments inside a company from Honduras."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="341dp"
        android:layout_height="118dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/rw_login" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="412dp"
        android:layout_height="111dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/rw_catalogs" />
</androidx.constraintlayout.widget.ConstraintLayout>